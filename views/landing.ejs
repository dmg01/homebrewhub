<!doctype html>
<html>
	<head>
		<title>Homebrew Hub</title>
		<% include head.html %>
		<script src="include/countUp.js"></script>
		<script>
			window.onload = function() {
				var options = {
				useEasing: true,
				useGrouping: true,
				separator: ',',
				decimal: '.',
				};
				var demo = new CountUp('dbCount', 0, <%= gamecount %>, 0, 2.5, options);
				if (!demo.error) {
				demo.start();
				} else {
				console.error(demo.error);
				}
			}
		</script>

		
